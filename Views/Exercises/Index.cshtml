@model IEnumerable<SoftwareIntegrationThirdVersion.Models.Exercise>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Agregar nuevo ejercicio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Identificador de gimnasio
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                Duración
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.gymId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exerciseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exerciseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exerciseDuration)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.exerciseId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.exerciseId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.exerciseId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
